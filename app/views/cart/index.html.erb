<div style="margin-top:10%;">
<% if @cart.empty? %>
<p>Need to add functionality here to display recommended products maybe</p>
<a href="/products" class="button">Continue Shopping</a>
<%else%>




<p id="notice"><%= notice %></p>






<div id="itemsContainer">
    <table id="customers">
        <% total = 0 %>
        <% totalq = 0 %>
       
        <% @cart.each do |id, quantity| %>
        
        <% product = Product.find_by_id(id) %>
        
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag product.image_url, :style =>"height:40px"), product %>
                </div>
                
            </td>
            
            <td class="title"><%= link_to product.title, product %></td>
            <td><a href="/remove/<%= product.id %>" class="button">X</a></td>
            <td>
            <a href="/add/<%= product.id %>" ><i class='fas fa-arrow-alt-circle-up'></i></a>    
            <a href="/reduce/<%= product.id %>" ><i class='fas fa-arrow-alt-circle-down'></i></a></td>
            <td class="price"><%= number_to_currency(product.price, :unit =>"€") %></td>
            <td class="quantity"><%= quantity %></td>
            <td class="price"><%= number_to_currency(quantity * product.price, :unit =>"€") %></td>
            
        </tr>
        
        <tr>
            <% total += quantity * product.price %>
            <% totalq += quantity %>
           
          </tr>
         <% end %>
         <tr>
             <td>
            Grand Total: <%= number_to_currency(total, :unit => "€") %>
            TotalQ: <%= totalq %>
          
           
            </td>
          </tr>
          
          
          
          
           <tr>
             <td>
            <a href="/products" class="button">Continue Shopping</a> 
            </td>
             <td>
            <a href="/cart/clearcart" class="button">Empty Cart</a> 
            </td>
            <td><a href="/checkout" class="button">Checkout</a></td>
          </tr>
           
    </table>
      </div>
</div>
<% end %>