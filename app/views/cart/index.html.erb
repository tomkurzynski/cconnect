
<div style="margin-top:10%;">
<% if @cart.empty? %>
<p>Need to add functionality here to display recommended products maybe</p>
<a href="/products" class="button">Continue Shopping</a>
<%else%>




<p id="notice"><%= notice %></p>







    
    <table class="w3-container">
        <% total = 0 %>  
        <% @totalq = 0 %>
        <% @totalw = 0 %>
       
        <% @cart.each do |id, quantity| %>
        
        <% product = Product.find_by_id(id) %>
        
        <tr>
            <td>
                <div>
                    <%= link_to (image_tag product.image_url, :style =>"height:50px;width:50px;"), product %>
                </div>
                
            </td>
            
            <td><%= link_to product.title, product, :style =>"text-decoration:none;" %></td>
            <td><a href="/remove/<%= product.id %>" class="w-3button w3-hover-black" style="text-decoration:none;">X</a></td>
            <td>
            <a href="/add/<%= product.id %>" ><i class='fas fa-arrow-alt-circle-up'></i></a>    
            <a href="/reduce/<%= product.id %>" ><i class='fas fa-arrow-alt-circle-down'></i></a></td>
            <td><%= number_to_currency(product.price, :unit =>"€") %></td>
            <td><%= quantity %></td>
            <td><%= product.weight %></td>
          
          
            
            <td><%= number_to_currency(quantity * product.price, :unit =>"€") %></td>
            
        </tr>
        
        <tr>
            <% total += quantity * product.price %>
            <% @totalq += quantity %>
             <% @totalw += quantity * product.weight %>
           
          </tr>
         <% end %>
        
         <tr>
             <td>
            Grand Total: <%= number_to_currency(total, :unit => "€") %>
            TotalQ: <%= @totalq %>
            TotalW: <%= @totalw %>
           
            </td>
          </tr>
          
          
          
          
           <tr>
             <td>
            <a href="/products" class="w3-button w3-teal w3-hover-black">Continue Shopping</a> 
            </td>
             <td>
            <a href="/cart/clearcart" class="w3-button w3-teal w3-hover-black">Empty Cart</a> 
            </td>
            <td><a href="/checkout" class="w3-button w3-teal w3-hover-black">Checkout</a></td>
          </tr>
           
    </table>
      </div>

<% end %>
