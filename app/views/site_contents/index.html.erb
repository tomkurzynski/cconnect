<p id="notice"><%= notice %></p>

<h1>Site Contents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Header1</th>
      <th>Header2</th>
      <th>Description1</th>
      <th>Description2</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_contents.each do |site_content| %>
      <tr>
        <td><%= site_content.title %></td>
        <td><%= site_content.header1 %></td>
        <td><%= site_content.header2 %></td>
        <td><%= site_content.description1 %></td>
        <td><%= site_content.description2 %></td>
        <td><%= site_content.image %></td>
        <td><%= site_content.phonenumber %></td>
        <td><%= site_content.address %></td>
        <td><%= site_content.email%></td>
        
        <td><%= link_to 'Show', site_content %></td>
        <td><%= link_to 'Edit', edit_site_content_path(site_content) %></td>
        <td><%= link_to 'Destroy', site_content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site Content', new_site_content_path %>
