<p id="notice"><%= notice %></p>

<h1>Site Contents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Header1</th>
      <th>Header2</th>
      <th>Description1</th>
      <th>Description2</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_contents.each do |site_content| %>
      <tr>
        <td><%= site_content.title %></td>
        <td><%= site_content.header1 %></td>
        <td><%= site_content.header2 %></td>
        <td><%= site_content.description1 %></td>
        <td><%= site_content.description2 %></td>
        <td><%= site_content.image %></td>
        
        <% if session[:login] == 1 %> 
        <%= link_to 'Show', site_content, :class => "button", :role => "button" %>
        <%= link_to 'Edit', edit_site_content_path(site_content), :class => "button", :role => "button" %>
        <%= link_to 'Destroy', site_content, method: :delete, data: { confirm: 'Are you sure?' },:class => "button", :role => "button" %>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if session[:login] == 1 %>
<%= link_to 'New Site Content', new_site_content_path %>
 <% end %>
