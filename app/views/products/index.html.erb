<p id="notice"><%= notice %></p>
  <br>
    
   <div class="w3-dropdown-hover w3-hide-small">
    <button class="w3-button w3-hover-sand" title="Brands"><%=link_to "All Brands","/brands",class:"tdnone"%></link_to> <i class="fa fa-caret-down"></i></button>     
    <div class="w3-dropdown-content w3-brown">
      <%=render 'layouts/brands'%>
    </div>  
  </div>
  
  <div class="w3-dropdown-hover w3-hide-small">
    <button class="w3-button w3-hover-sand" title="Categories"><%=link_to "All Categories","/categories",class:"tdnone"%></link_to> <i class="fa fa-caret-down"></i></button>     
    <div class="w3-dropdown-content w3-brown">
      <%=render 'layouts/categories'%>
    </div>  
  </div>
  
  <div id="productsContainer">
  
    <h1>All Products</h1>
    
    <br>
    <% @products.each do |product| %>
    <div class = "w3-panel w3-card-2" style = "width: 30%; display: inline-block;">
        <div><h3><%= product.title %></h3></div>
        <%= link_to (image_tag product.image_url, :class => "productholsIm", :style => "height:200px; width:200px"), product %>
        <div><p><%= product.description %></p></div>
        <div>Price: <%=number_to_currency(product.price, :unit=> "â‚¬")%></div>
        <div>Category: <%= product.category %></div>
        <div>Brand: <%= product.brand %></div>
        <div>Weight: <%= product.weight %> kg</div>
        
        <p>
         
          
           <% if user_signed_in? %>
              <% if current_user.admin? %>
                <%= link_to 'Edit', edit_product_path(product), :class => "w3-button w3-teal", :role => "button" %>
                <%= link_to 'Destroy',  product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "w3-button w3-teal", :role => "button" %>
                <%= link_to 'Show', product, :class => "w3-button w3-teal", :role => "button" %>
              <% end %>
              
            <% else %>
              <a href="/cart/<%= product.id %>" class="w3-button w3-teal">Add To Cart</a>
          <% end %>
        </p>
    </div>
    
    
    <% end %>

