<p id="notice"><%= notice %></p>
  
  <div id="productsContainer" style="margin-top:10%;">
  
  <h2>You Searched Our Product Catalog For <%= @Search_term %></h2>

  <% if @products.length == 0  %>
  <br/>
  <h2>No products were found to match your search</h2>
  
  <% end %>


    
    
    
    <% @products.each do |product| %>
    <div class = "producthols">
        <h1><%= product.title %></h1>
        <%= link_to (image_tag product.image_url, :class => "productholsIm", :size => "180x150"), product %>
        <p><%= product.description %></p>
        <p>Price: <%=number_to_currency(product.price, :unit=> "â‚¬")%>
        Category: <%= product.category %>
        Brand: <%= product.brand %>
        <br>
        Weight: <%= product.weight %> kg</p>
        
        <p>
          <%#= link_to 'Show', product, :class => "button", :role => "button" %>
          <a href="/cart/<%= product.id %>" class="button">Add To Cart</a>
          
           <% if user_signed_in? %>
              <% if current_user.admin? %>
            <%= link_to 'Edit', edit_product_path(product), :class => "button", :role => "button" %>
            <%= link_to 'Destroy',  product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
            <% end %>
          <% end %>
        </p>
    </div>
       
    
    <% end %>
  

<br>

<% if session[:login] == 1 %>    
<%= link_to 'New Product', new_product_path %>
<%end%>